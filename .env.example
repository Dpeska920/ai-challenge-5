# Telegram
TELEGRAM_BOT_TOKEN=

# MongoDB
MONGODB_URI=mongodb://localhost:27017/telegram-ai-bot

# Activation
ACTIVATION_CODE=secret_phrase

# AI Provider
AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_RESPONSE_FORMAT=text

# System prompt
SYSTEM_PROMPT=You are a helpful assistant.

# Default limits after activation (empty = unlimited)
DEFAULT_DAILY_LIMIT=
DEFAULT_MONTHLY_LIMIT=
DEFAULT_TOTAL_LIMIT=50

# Conversation timeout (hours)
CONVERSATION_TIMEOUT_HOURS=24

# OpenRouter (optional, for dynamic model switching)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# MCP Server (optional, for tool calling support)
# In docker-compose this is set automatically to http://mcp:3001
MCP_SERVER_URL=

# MCP Remote Servers (for MCP Hub to connect to external MCP servers)
# Format: name1:http://url1,name2:http://url2
# Or for stdio-based: name:command:arg1:arg2
# Examples:
#   time:python3:-m:mcp_server_time
#   github:http://github-mcp:3000
#   filesystem:npx:@anthropic/mcp-server-filesystem:/tmp
MCP_REMOTE_SERVERS=

# OpenWeather API (for weather MCP server)
OPENWEATHER_API_KEY=


# Security setting - set to true in production to disable dangerous Docker tools
# When true, restart/start/stop container tools are disabled
# Default: false (dangerous tools enabled for development)
IS_SECURE_ENV=false

# Disable AI tools/function calling
# Set to true for local models without tools support (LM Studio, Ollama, etc.)
# Default: false
DISABLE_TOOLS=false